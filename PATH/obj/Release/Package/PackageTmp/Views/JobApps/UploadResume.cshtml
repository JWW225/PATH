@model ProvalusApplicantTrackingHub.Models.JobApp

@{
    ViewBag.Title = "UploadResume";
}
<div>

    @if (User.Identity.IsAuthenticated)
    {
        @Html.Partial("_StepBar")
    }

</div>

<h2>Upload Your Resume</h2>
<h3>Please ensure that your resume is uploaded as a Microsoft Word document and formatted as follows:</h3>
<h3>John Smith's Resume would be: JS Resume.docx</h3>

<div>

   @using (Html.BeginForm("Upload", "JobApps", FormMethod.Post, new { enctype = "multipart/form-data", }))
   {
    @Html.AntiForgeryToken()
    <hr />

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.Label("File", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="file-input-new " type="file" name="file" id="file" style="width:50%" />
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    If you do not have a Resume, please click the button below to continue your application without one.
                </p>
                <p><a class="btn btn-danger" href="@Url.Action("Create", "JobApps")">Start Your Application &raquo;</a></p>
            </div>
        </div>
    </div>
   }
</div>


